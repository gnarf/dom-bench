.hopeless {
	position: absolute;
	width: 90%;
	height: 90%;
	top: 5%;
	left: 5%;
	background: blue;

	.board {
		width: 100%;
		height: 100%;
		position: relative;
		background: black;
		
		.score {
			position: absolute;
			text-align: center;
			bottom: -1.5em;
			width: 100%;
		}
		
		.square {
			position: absolute;
			left: 0%;
			bottom: 0%;
			transition-property: left, bottom, transform, border-width;
			transition-duration: 0.25s;
			box-sizing: border-box;
			border: 3px solid black;

			&.matches-left {
				border-left-width: 0px;
			}
			&.matches-right {
				border-right-width: 0px;
			}
			&.matches-up {
				border-top-width: 0px;
			}
			&.matches-down {
				border-bottom-width: 0px;
			}

			&.color1 {
				background: red
			}
			&.color2 {
				background: green
			}
			&.color3 {
				background: yellow
			}
			&.color4 {
				background: blue
			}
			&.color5 {
				background: purple
			}
			&.color6 {
				background: cyan
			}
			&.color7 {
				background: white
			}
			&.color8 {
				background: #abcdef
			}
			&.color9 {
				background: #bada55
			}
			&.color10 {
				background: #aaa
			}
			&.color10 {
				background: #666
			}
		}
	}
}